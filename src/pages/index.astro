---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10">
				<WarpBackground
					colors={["#702d00", "#88ddae", "#2d0b1e"]}
					colorBack="#140a00"
					softness={0.5}
					intensity={0.5}
					noise={0.5}
					shape="sphere"
					speed={1}
					scale={0.92}
					rotation={0}
					offsetX={0}
					offsetY={0}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large"> DN5S </H1>
					<span class="inline-block mt-2 px-3 py-1 text-sm text-zinc-400 bg-zinc-900/40 border border-zinc-800 rounded-full">All-Rounder</span>
				</div>

				<div>
					<AvailableForWork className="py-4" />
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="mailto:me@dn5s.dev">Contact me</Link>
							<Link href="/projects" variant="secondary">View recent work</Link>
						</div>

						<Navigation client:load>
							<Link href="/blog" variant="secondary">Blog</Link>
							<Link href="/about" variant="secondary">About</Link>
							<Link href="/contact" variant="secondary">Contact</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
